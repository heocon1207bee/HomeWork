html
head
    title #{title}
    meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
    link(href="./styles/form.css", rel="stylesheet")
body
    div.container
        form.userForm(action="/user-info", method="post" enctype="application/x-www-form-urlencoded")
            h3.formTitle Registration Form
            .formDaddy
                .formChild
                    label First Name:
                    input(id='firstName', name='ftName', type='text', placeholder='Jonny')
                .formChild
                    label Last Name:
                    input(id='lastName', name='ltName', type='text', placeholder='Deep')
                .formChild
                    label Birthday:
                    input(id='birthday', name='birthDay', type='number', step='1')
                .formChild
                    label Gender:
                    div
                        span
                            input(id='male', type='radio', name='gender', value='Male')
                            label(for='male') Male
                        span
                            input(id='female', type='radio', name='gender', value='Female')
                            label(for='female') Female
                .formChild
                    label Email:
                    input(type='email', name='email', placeholder='abc@example.com')
                .formChild
                    label Phone Number:
                    input(type='text', name='phoneNumber', placeholder='+8499999999')
                .formChild
                    label Subject:
                    select(name='subject')
                        option(value='One') One
                        option(value='Punch') Punch
                        option(value='Man') Man
            button(type='submit') SUBMIT
    script.
        let thisYear = new Date().getFullYear()
        const birthday = document.getElementById('birthday')
        birthday.value = thisYear
        birthday.max= thisYear